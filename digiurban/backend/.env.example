# Environment
NODE_ENV=development

# Server
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database
# ⚠️  IMPORTANTE: Sempre usar caminho relativo a partir de backend/
# Desenvolvimento: file:./prisma/dev.db
# Produção (Docker): file:/app/data/dev.db
DATABASE_URL="file:./prisma/dev.db"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Multi-tenant
DEFAULT_TENANT=demo

# CORS
CORS_ORIGIN=http://localhost:3000
